<h1>
  List of all directors
</h1>

<hr>

<div>
  <%= link_to "Add a new director", new_director_path %>
</div>

<hr>

<table>
  <tr>
    <th>
      ID
    </th>

    <th>
      First Name
    </th>

    <th>
      Last Name
    </th>

     <th>
      DoB
    </th>

    <th>
      Number of Movies
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @director.each do |director| %>
  <tr>
    <td>
      <%= director.id %>
    </td>

    <td>
      <%= director.first_name %>
    </td>

    <td>
      <%= director.last_name %>
    </td>

    <td>
      <%= director.dob %>
    </td>

    <td>
      <%= director.number_of_movies %>
    </td>

    <td>
      <%= time_ago_in_words(director.created_at) %> ago
    </td>
    <td>
      <%= time_ago_in_words(director.updated_at) %> ago
    </td>

    <td>
      <%= link_to "Show details", director %>
    </td>
  </tr>
  <% end %>
</table>
