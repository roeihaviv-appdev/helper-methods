<div>
  <div>
    <h1>
      Director #<%= @director.id %> details
    </h1>

    <div>
      <div>
        <%= link_to "Go back", directors_path %>
      </div>

      <div>
        <%= link_to "Edit director", edit_director_path(@director) %>
      </div>

      <div>
        <%= link_to "Delete director", director_path(@director), method: :delete %>
      </div>
    </div>

    <dl>
      <dt>
        First Name
      </dt>
      <dd>
        <%= @director.first_name %>
      </dd>

      <dt>
        Last Name
      </dt>
      <dd>
        <%= @director.last_name %>
      </dd>

      <dt>
        DoB
      </dt>
      <dd>
        <%= @director.dob %>
      </dd>

      <dt>
        Number of Movies
      </dt>
      <dd>
        <%= @director.number_of_movies %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@director.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@director.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>
