<h1>Edit director</h1>

<% @director.errors.full_messages.each do |message| %>
  <p style="color: red;"><%= message %></p>
<% end %>

<%= form_with(model: @director) do |form| %>
  <div>
    <%= form.label :first_name %>

    <%= form.text_field :first_name %>
  </div>

    <div>
    <%= form.label :last_name %>

    <%= form.text_field :last_name %>
  </div>

    <div>
    <%= form.label :dob %>

    <%= form.text_field :dob %>
  </div>

    <div>
    <%= form.label :number_of_movies %>

    <%= form.text_field :number_of_movies %>
  </div>

  <%= button_tag "Update movie" %>
<% end %>
